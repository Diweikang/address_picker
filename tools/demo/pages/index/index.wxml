<view class="address-picker">
	<view wx:if="{{!isShowSearch}}">
		<areas-group bind:change="onChange" groups="{{groups}}" bind:showSearch="showSearch" />
		<location/>
		<hot-citys
		 wx:if="{{code === '0'}}"
		 id="hotCity"
		 bind:clearHotselected="clearHotChecked"
		 bind:select="selectHotCity"
		 hotCitys="{{hotCitys}}"
		/>
		<city-columns
		 bind:changeSearchCity="changeSearchCity"
		 bind:clearSearchCity="clearSearchCity"
		 bind:getColumnValue="getColumnValue"
		 bind:clearHotselected="clearHotChecked"
		 areaType="{{areaType}}"
		 hotCity="{{hotCity}}"
		 searchCity="{{searchCity}}"
		 cityColumns="{{cityColumns}}"
		/>
	</view>
	<view wx:else>
		<city-search
		 searchCitys="{{searchCitys}}"
		 bind:selectSearch="selectSearch"
		 bind:hideSearch="hideSearch"
		 bind:searching="querySearchCitys"
		 bind:clearSearchCity="clearSearchCity"
		/>
	</view>
</view>

